---
import Layout from "../layouts/Layout.astro";

const siteTitle = "Uncharted Atlas: Discover Hidden Wonders";
const siteDescription = "A community for sharing and discovering unique, off-the-beaten-path travel destinations. Inspire wanderlust and responsible exploration.";
---

<Layout title={siteTitle} description={siteDescription}>
    <section class="hero bg-primary text-white py-20 rounded-lg shadow-md">
        <div class="container mx-auto text-center">
            <h1 class="text-5xl font-bold mb-4">Welcome to Uncharted Atlas</h1>
            <p class="text-lg mb-8">Discover hidden gems and share your off-the-beaten-path adventures with our community.</p>
            <a href="/blog" class="bg-accent text-white py-3 px-6 rounded-full hover:bg-orange-500">Explore the Blog</a>
        </div>
    </section>

    <section class="py-12">
        <div class="container mx-auto">
            <h2 class="text-3xl font-semibold mb-6 text-gray-800">Featured Discoveries</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <img src="https://placehold.co/600x400.png" alt="Placeholder Image" class="w-full h-48 object-cover" data-ai-hint="mountain landscape"/>
                    <div class="p-4">
                        <h3 class="text-xl font-semibold mb-2 text-gray-800">The Whispering Caves of Eldoria</h3>
                        <p class="text-gray-600">Explore the mystical caves, rumored to hold ancient secrets.</p>
                    </div>
                </div>
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <img src="https://placehold.co/600x400.png" alt="Placeholder Image" class="w-full h-48 object-cover" data-ai-hint="tropical beach"/>
                    <div class="p-4">
                        <h3 class="text-xl font-semibold mb-2 text-gray-800">Hidden Lagoon of Avani</h3>
                        <p class="text-gray-600">Discover the serene beauty of Avani's untouched lagoon.</p>
                    </div>
                </div>
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <img src="https://placehold.co/600x400.png" alt="Placeholder Image" class="w-full h-48 object-cover" data-ai-hint="desert oasis"/>
                    <div class="p-4">
                        <h3 class="text-xl font-semibold mb-2 text-gray-800">The Oasis of Zerzura</h3>
                        <p class="text-gray-600">Experience the magic of Zerzura, a desert oasis shrouded in legend.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="py-12 bg-gray-50">
        <div class="container mx-auto text-center">
            <h2 class="text-3xl font-semibold mb-6 text-gray-800">Share Your Discovery</h2>
            <p class="text-lg mb-8">Become a part of the Uncharted Atlas community. Share your unique travel experiences and inspire others to explore responsibly.</p>
            <button class="bg-primary text-white py-3 px-6 rounded-full hover:bg-blue-700">Submit Your Adventure</button>
        </div>
    </section>
</Layout>